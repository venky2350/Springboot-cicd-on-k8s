pipeline {
  agent any

  environment {
    KUBECONFIG = "/root/.kube/config"
    DOCKER_IMAGE = "venkatesh384/springboot-cicd-on-k8s"
    IMAGE_TAG = "v5"
    MANIFEST_DIR = "manifests"
  }
 stage('ğŸš€ Deploy with Kubernetes Manifests') {
  steps {
    dir("${MANIFEST_DIR}") {
      withEnv(["KUBECONFIG=${KUBECONFIG}"]) {
        sh '''
          echo "ğŸ“ KUBECONFIG Path: $KUBECONFIG"
          ls -l $KUBECONFIG

          echo "ğŸ” Kubernetes Client Version:"
          kubectl version --client

          echo "ğŸ”§ Applying namespace (ignore if exists)"
          kubectl apply -f namespace.yaml || echo "Namespace already exists"

          echo "ğŸ“ Showing original deployment.yaml"
          cat deployment.yaml

          echo "ğŸ”„ Updating image in deployment.yaml"
          sed -i "s|image: .*|image: $DOCKER_IMAGE:$IMAGE_TAG|" deployment.yaml
          cat deployment.yaml

          echo "ğŸš€ Applying deployment and service"
          kubectl apply -f deployment.yaml
          kubectl apply -f service.yaml

          echo "â³ Waiting for deployment rollout"
          kubectl rollout status deployment/jenkins-demo -n dev

          echo "ğŸ“¦ Final state of resources in 'dev' namespace"
          kubectl get all -n dev
        '''
      }
    }
  }
}
}