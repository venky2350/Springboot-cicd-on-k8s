pipeline {
  agent any

  tools {
    maven 'Maven 3.9.6' // Must match Jenkins Global Tool name
    jdk 'JDK 17'        // Must match Jenkins Global JDK name
  }

  environment {
    SONARQUBE = 'SonarQube'                        // Jenkins SonarQube server name
    DOCKER_IMAGE = 'venkatesh384/jenkins-demo'     // Correct DockerHub image
  }

  stages {

    stage('Checkout') {
      steps {
        git 'https://github.com/venky2350/Springboot-cicd-on-k8s.git'
      }
    }

    stage('Build') {
      steps {
        dir('app') {
          sh 'mvn clean package'
        }
      }
    }

    stage('SonarQube Analysis') {
      steps {
        dir('app') {
          withSonarQubeEnv("${SONARQUBE}") {
            sh '''
              mvn clean verify sonar:sonar \
                -Dsonar.projectKey=Springboot-cicd-on-k8s \
                -Dsonar.projectName='Springboot-cicd-on-k8s' \
                -Dsonar.host.url=http://34.237.245.195:9000 \
                -Dsonar.token=sqp_65ae222ee47ec2eff769e56c3bcb39163b1cf93d
            '''
          }
        }
      }
    }

    stage('Docker Build & Push') {
      steps {
        dir('app') {
          withCredentials([usernamePassword(
            credentialsId: 'dockerhub-creds',
            usernameVariable: 'DOCKER_USERNAME',
            passwordVariable: 'DOCKER_PASSWORD'
          )]) {
            sh '''
              echo "üîê Logging in to Docker Hub..."
              echo $DOCKER_PASSWORD | docker login -u $DOCKER_USERNAME --password-stdin

              echo "üê≥ Building Docker image..."
              docker build -t jenkins-demo:latest .

              echo "üì§ Pushing Docker image to Docker Hub..."
              docker push jenkins-demo:latest
            '''
          }
        }
      }
    }

    stage('Trivy Security Scan') {
      steps {
        dir('trivy') {
          sh './scan-trivy.sh'
        }
      }
    }

    stage('Copy Reports') {
      steps {
        sh '''
          mkdir -p reports
          cp trivy-reports/image-scan-report.txt reports/trivy-report.txt || echo "No Trivy report"
          cp sonar-report.html reports/sonar-report.html || echo "No Sonar report"
        '''
      }
    }

    stage('Deploy to Kubernetes') {
      steps {
        dir('manifests') {
          sh '''
            kubectl apply -f namespace.yaml
            kubectl apply -f deployment.yaml
            kubectl apply -f service.yaml
            kubectl apply -f ingress.yaml
            kubectl rollout status deployment/jenkins-demo -n jenkins-demo
            kubectl get all -n jenkins-demo
          '''
        }
      }
    }
  }

  post {
    always {
      cleanWs()
    }
  }
}
