pipeline {
  agent any

  tools {
    maven 'Maven 3.9.6'
    jdk 'JDK 17'
  }

  environment {
    SONARQUBE = 'SonarQube'
    DOCKER_IMAGE = 'venkatesh384/jenkins-demo' // âœ… Your DockerHub image
  }

  stages {

    stage('ğŸ“¥ Checkout') {
      steps {
        git 'https://github.com/venky2350/Springboot-cicd-on-k8s.git'
      }
    }

    stage('ğŸ”¨ Maven Build') {
      steps {
        dir('app') {
          sh 'mvn clean package'
        }
      }
    }

    stage('ğŸ” SonarQube Analysis') {
      steps {
        dir('app') {
          withSonarQubeEnv("${SONARQUBE}") {
            withCredentials([string(credentialsId: 'sonarqube-token', variable: 'SONAR_TOKEN')]) {
              sh '''
                mvn clean verify sonar:sonar \
  -Dsonar.projectKey=Springboot-cicd-on-k8s \
  -Dsonar.projectName='Springboot-cicd-on-k8s' \
  -Dsonar.host.url=http://54.165.159.175:9000/ \
  -Dsonar.token=sqp_4ef0a07925380fe3050b5f860e69ca3fa5603059
              '''
            }
          }
        }
      }
    }

    stage('ğŸ³ Docker Build & Push') {
      steps {
        withCredentials([usernamePassword(
          credentialsId: 'dockerhub-creds',
          usernameVariable: 'DOCKER_USERNAME',
          passwordVariable: 'DOCKER_PASSWORD'
        )]) {
          dir('app') {
            sh '''
              echo "ğŸ” Logging in to Docker Hub..."
              echo $DOCKER_PASSWORD | docker login -u $DOCKER_USERNAME --password-stdin

              echo "ğŸ³ Building Docker image..."
              docker build -t $DOCKER_IMAGE:latest .

              echo "ğŸ“¤ Pushing Docker image to Docker Hub..."
              docker push $DOCKER_IMAGE:latest
            '''
          }
        }
      }
    }

    stage('ğŸ” Trivy Security Scan') {
      steps {
        dir('trivy') {
          sh '''
            if command -v trivy >/dev/null 2>&1; then
              ./scan-trivy.sh
            else
              echo "âŒ Trivy is not installed on this agent."
            fi
          '''
        }
      }
    }

    stage('ğŸ“„ Copy Reports') {
      steps {
        sh '''
          mkdir -p reports
          cp trivy-reports/image-scan-report.txt reports/trivy-report.txt || echo "âš ï¸ No Trivy report found."
          cp sonar-report.html reports/sonar-report.html || echo "âš ï¸ No Sonar report found."
        '''
      }
    }

    stage('ğŸš€ Deploy to Kubernetes') {
      steps {
        dir('manifests') {
          sh '''
            echo "ğŸ”§ Applying Kubernetes manifests..."
            kubectl apply -f namespace.yaml
            kubectl apply -f deployment.yaml
            kubectl apply -f service.yaml
            kubectl apply -f ingress.yaml

            echo "â³ Waiting for rollout to complete..."
            kubectl rollout status deployment/jenkins-demo -n jenkins-demo

            echo "ğŸ“Š Fetching deployed resources..."
            kubectl get all -n jenkins-demo
          '''
        }
      }
    }
  }

  post {
    always {
      echo "ğŸ§¹ Cleaning workspace..."
      cleanWs()
    }
  }
}
