pipeline {
  agent any

  tools {
    maven 'Maven 3.8.7'
    jdk 'JDK 17'
  }

  environment {
    SONARQUBE = 'SonarQube'
    DOCKER_IMAGE = 'venkatesh384/jenkins-demo'
    NGINX_IMAGE = 'venkatesh384/nginx-reverse-proxy'
    IMAGE_TAG = "${BUILD_NUMBER}"
    REGISTRY_CREDS = 'dockerhub-creds'
    CHART_PATH = 'jenkins-demo-chart'
    APP_DIR = 'app'
    NGINX_DIR = 'nginx'
    REPORT_DIR = 'reports'
  }

  stages {

    stage('üì• Checkout') {
      steps {
        git 'https://github.com/venky2350/Springboot-cicd-on-k8s.git'
      }
    }

    stage('üî® Maven Build') {
      steps {
        dir("${APP_DIR}") {
          sh 'mvn clean package -DskipTests'
        }
      }
    }

    stage('üîé SonarQube Analysis') {
      steps {
        dir("${APP_DIR}") {
          withSonarQubeEnv("${SONARQUBE}") {
            withCredentials([string(credentialsId: 'sonarqube-token', variable: 'SONAR_TOKEN')]) {
              sh '''
                mvn clean verify sonar:sonar \
                  -Dsonar.projectKey=Springboot-cicd-on-k8s \
                  -Dsonar.projectName='Springboot-cicd-on-k8s' \
                  -Dsonar.host.url=http://44.203.182.235:9000 \
                  -Dsonar.token=$SONAR_TOKEN
              '''
            }
          }
        }
      }
    }

    stage('üê≥ Docker Build & Push - Spring App') {
      steps {
        withCredentials([usernamePassword(credentialsId: "${REGISTRY_CREDS}", usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
          dir("${APP_DIR}") {
            sh '''
              echo $DOCKER_PASSWORD | docker login -u $DOCKER_USERNAME --password-stdin
              docker build -t $DOCKER_IMAGE:$IMAGE_TAG .
              docker push $DOCKER_IMAGE:$IMAGE_TAG
            '''
          }
        }
      }
    }

    stage('üîê Trivy Security Scan') {
      steps {
        dir('trivy') {
          withEnv(["IMAGE_NAME=${DOCKER_IMAGE}:${IMAGE_TAG}"]) {
            sh '''
              if command -v trivy >/dev/null 2>&1; then
                echo "üîé Running Trivy scan..."
                chmod +x scan-trivy.sh
                ./scan-trivy.sh
              else
                echo "‚ö†Ô∏è Trivy not installed, skipping."
              fi
            '''
          }
        }
      }
    }

    stage('üìÑ Archive Reports') {
      steps {
        sh '''
          mkdir -p reports
          cp trivy-reports/image-scan-report.txt reports/trivy-report.txt || echo "‚ö†Ô∏è No Trivy TXT"
          cp trivy-reports/trivy-report.html reports/trivy-report.html || echo "‚ö†Ô∏è No Trivy HTML"
          cp ${APP_DIR}/target/sonar-report/index.html reports/sonar-report.html || echo "‚ö†Ô∏è No Sonar HTML"
        '''
        archiveArtifacts artifacts: 'reports/**', allowEmptyArchive: true
      }
    }

    stage('üß± Nginx Docker Build & Push') {
      steps {
        withCredentials([usernamePassword(credentialsId: "${REGISTRY_CREDS}", usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
          dir("${NGINX_DIR}") {
            sh '''
              echo $DOCKER_PASSWORD | docker login -u $DOCKER_USERNAME --password-stdin

              [ -f default.conf ] || { echo "‚ùå default.conf missing!"; exit 1; }
              [ -f index.html ] || { echo "‚ùå index.html missing!"; exit 1; }

              # Copy sonar report HTML to be served by nginx
              cp ../reports/sonar-report.html ./ || {
                echo "‚ö†Ô∏è No Sonar report found ‚Äì generating placeholder"
                echo "<html><body><h2>No Sonar Report Found</h2></body></html>" > sonar-report.html
              }

              docker build -t $NGINX_IMAGE:$IMAGE_TAG .
              docker push $NGINX_IMAGE:$IMAGE_TAG
            '''
          }
        }
      }
    }

    stage('üöÄ Deploy with Helm') {
      steps {
        script {
          docker.image('lachlanevenson/k8s-helm:latest')
                .inside('--entrypoint=""') {
            dir("${CHART_PATH}") {
              sh '''
                helm upgrade --install jenkins-demo . \
                  --namespace dev --create-namespace \
                  --set springApp.image=$DOCKER_IMAGE:$IMAGE_TAG \
                  --set nginx.image=$NGINX_IMAGE:$IMAGE_TAG

                kubectl rollout status deployment/spring-app -n dev
                kubectl rollout status deployment/nginx-proxy -n dev || true
                kubectl get all -n dev
              '''
            }
          }
        }
      }
    }
  }

  post {
    always {
      echo "üßπ Cleaning workspace..."
      cleanWs()
    }
  }
}
